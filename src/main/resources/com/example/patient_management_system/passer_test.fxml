<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.ComboBox?>
        <?import javafx.scene.control.CheckBox?>
        <?import javafx.scene.control.ScrollPane?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.RendezVousController.PasserTestController" fitToWidth="true">
<VBox spacing="25" alignment="CENTER" style="-fx-padding: 25">
    <children>
        <!-- Section for Question Libre -->
        <Label text="Question Libre" style="-fx-font-weight: bold;-fx-padding: 10 ; -fx-font-size: 15" />
        <VBox fx:id="libreQuestionsVBox" />

        <!-- Section for QCU -->
        <Label text="Question à Choix Unique (QCU)" style="-fx-font-weight: bold; -fx-padding: 10 ; -fx-font-size: 15" />
        <VBox fx:id="qcuQuestionsVBox" />

        <!-- Section for QCM -->
        <Label text="Question à Choix Multiple (QCM)" style="-fx-font-weight: bold; -fx-padding: 10; -fx-font-size: 15" />
        <VBox fx:id="qcmQuestionsVBox" />

        <!-- Section for Exercice -->
        <Label text="Exercice" style="-fx-font-weight: bold; -fx-padding: 10; -fx-font-size: 15" />
        <VBox fx:id="exerciceQuestionsVBox" />

        <!-- Submit Button -->
        <Button text="Submit" onAction="#handleTestSubmit" prefHeight="40" prefWidth="80" style="-fx-background-color: #094fa8; -fx-font-weight: bold; -fx-text-fill: WHITE;" />
    </children>
</VBox>
</ScrollPane>
