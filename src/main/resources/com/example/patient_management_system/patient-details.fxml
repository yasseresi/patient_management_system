<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.DossierPatientsControllers.PatientDetailsController"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-padding: 50;">

    <!-- Patient Information -->
    <HBox alignment="CENTER" spacing="15">
        <Label fx:id="patientNameLabel" text="Patient Name" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
        <Label fx:id="patientAgeLabel" text="Age" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
        <Label fx:id="patientDateNaissanceLabel" text="Date of Birth" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
        <Label fx:id="patientLieuNaissanceLabel" text="Place of Birth" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
    </HBox>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="25" style="-fx-padding: 50;">
        <Button text="Rendez-vous" fx:id="rendezVousButton" onAction="#handleRendezVous" style="-fx-min-width: 200; -fx-min-height: 200; -fx-background-color: brown; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-font-size: 20px;" />
        <Button text="BO" fx:id="boButton" onAction="#handleBO" style="-fx-min-width: 200; -fx-min-height: 200; -fx-background-color: brown; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-font-size: 20px;" />
        <Button text="Fiche de suivi" fx:id="ficheSuiviButton" onAction="#handleFicheSuivi" style="-fx-min-width: 200; -fx-min-height: 200; -fx-background-color: brown; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-font-size: 20px;" />
    </HBox>
</VBox>
